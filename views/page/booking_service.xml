                  <t t-foreach="booking_service_rec" t-as="header">
                    <h2 class="s_title_default color-black font-weight-bold">
                    <span t-field="header.header_service"/>
                    </h2>
                  </t>
                </div>
              </div>
            </div>
          </section>
          <section class="pt0 pb0 bg-100" data-name="Title">
            <div class="container">
