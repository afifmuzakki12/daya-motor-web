<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="after_sales" name="After Sales">
    <t t-call="website.layout">
      <div id="wrap" class="oe_structure oe_empty">
        <div class="live-chat-riri">
          <a href="/live-chat/">
            <img href="/live-chat/" class="act-img" src="/dym_website/static/src/img/popup-riri.png" aria-describedby="tooltip941603" style="max-height: 100px; max-width: 250px" />
          </a>
        </div>
        <section class="pt32 pb32" data-name="Title">
          <div class="container">
            <div class="row s_nb_column_fixed">
              <div class="col-lg-12 s_title pt16 pb16 text-center">
                <h1 class="s_title_default text-color-primary font-weight-bold">
                  Purna Jual
                </h1>
              </div>
            </div>
          </div>
        </section>
        <section class="s_features pb32 pt0" data-name="Features">
          <div class="container">
            <div class="row">
              <div class="pt32 pb32 text-center col-lg-3">
                <a href="/after-sales/booking-service" class="text-decoration-none stretched-link">
                  <img class="img-fluid o_we_custom_image m-3" src="/dym_website/static/src/img/book-service.svg" aria-describedby="tooltip96052" style="width: 150px; height: 150px" />
                  <h3 class="text-color-primary font-weight-bold">
                    Book Service
                  </h3>
                </a>
              </div>
              <div class="pt32 pb32 text-center col-lg-3">
                <a href="/after-sales/estimated-price/" class="text-decoration-none stretched-link">
                  <img class="img-fluid o_we_custom_image m-3" src="/dym_website/static/src/img/estimasi-biaya.svg" aria-describedby="tooltip910961" style="width: 150px; height: 150px" />
                  <h3 class="text-color-primary font-weight-bold">
                    Estimasi Biaya Service
                  </h3>
                </a>
              </div>
              <div class="pt32 pb32 text-center col-lg-3">
                <a href="/after-sales/spare-parts/" class="text-decoration-none stretched-link">
                  <img class="img-fluid o_we_custom_image m-3" src="/dym_website/static/src/img/suku-cadang.svg" aria-describedby="tooltip910961" style="width: 150px; height: 150px" />
                  <h3 class="text-color-primary font-weight-bold">
                    Suku Cadang
                  </h3>
                </a>
              </div>
              <div class="pt32 pb32 text-center col-lg-3">
                <a href="/after-sales/apparel/" class="text-decoration-none stretched-link">
                  <img class="img-fluid o_we_custom_image m-3" src="/dym_website/static/src/img/honda-apparel.svg" aria-describedby="tooltip910961" style="width: 150px; height: 150px" />
                  <h3 class="text-color-primary font-weight-bold">
                    Honda Genuine Apparel
                  </h3>
                </a>
              </div>
            </div>
          </div>
        </section>
      </div>
    </t>
  </template>
</odoo>
